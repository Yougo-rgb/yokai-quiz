{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["games"],

  "properties": {
    "games": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/game"
      }
    }
  },

  "definitions": {
    "gameId": {
      "type": "string",
      "enum": ["ykw1", "ykw2", "ykw3"]
    },
    "localizedName": {
      "type": "object",
      "required": ["display", "aliases"],
      "properties": {
        "display": { "type": "string" },
        "aliases": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "game": {
      "type": "object",
      "required": ["id", "names", "generation", "image"],
      "properties": {
        "id": { "$ref": "#/definitions/gameId" },
        "names": {
          "type": "object",
          "required": ["en"],
          "additionalProperties": {
            "$ref": "#/definitions/localizedName"
          }
        },
        "generation": {
          "type": "integer",
          "minimum": 1
        },
        "image": {
          "type": "string"
        }
      }
    }
  }
}